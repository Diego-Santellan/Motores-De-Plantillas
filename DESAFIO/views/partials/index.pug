doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title=title
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD", crossorigin="anonymous")
    body
        header
            nav(class="navbar bg-success-subtle ")
                div(class="container-fluid")
                    a(class="navbar-brand")="Papeleria"
                    form(class="d-flex", role="search")
                        input(class="form-control me-2", type="search", placeholder="Search", aria-label="Search")
                        button(class="btn btn-outline-light", type="submit")="Search"

        main 
            div( class="container mt-5 rounded border border-dark p-4", style="background-color: #F2E9E4;")
                div(class="jumbotron")
                    h1(style="color: #025159;")="Ingrese datos"
                    br
                    form(action="/productos", method="post") 
                        div(class="form-group")
                            label(for="nombreProducto")="Producto"
                            input(id="nombreProducto", class="form-control", type="text", name="nombreProducto")
                        div(class="form-group")
                            label(for="precio")="Precio"
                            input(id="precio", class="form-control", type="text", name="precio")
                        div(class="form-group")
                            label(for="imagen")="Imagen"
                            input(id="imagen", class="form-control", type="text", name="imagen")
                        button(style="background-color: #025159;", class="btn btn-outline-light mt-3 mb-5")="Enviar"
                    h2(style="color: #025159;")="Vista de productos"
                br
                if productos > 0
                    div(class="table-responsive")
                        table(class="table", style="background-color:  #659AA6;")
                        tr(style="color: #F2E9E4;")
                            th="Producto"
                            th="Precio"
                            th="Imagen"
                        for productos, i in producto
                            tr 
                                td=producto.nombreProducto 
                                td=producto.precio  
                                td= img(src=producto.imagen, alt="imagen del producto") 
                else if productos <=0
                    h3(class="alert alert-danger")="No se encontraron datos"
        footer
            p(class="text-center text-light")="Derechos reservados @2023"
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js", integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN", crossorigin="anonymous")   